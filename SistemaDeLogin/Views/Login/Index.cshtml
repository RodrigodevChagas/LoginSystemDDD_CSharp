@using SistemaDeLogin.AplicationIdentity.Requests
@model LoginRequest;
<div class="d-flex justify-content-center align-items-center">
    <form asp-controller = "Login" asp-action= "LogaUsuario" method= "post" id="Form" class="card w-100 shadow" style="max-width: 600px">
        <div class="card-body d-flex flex-column gap-2">
            <h1 class="text-center">LOGIN</h1>
            
            <div>
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" type="text" class="form-control" placeholder="Type your username"/>
                <span asp-validation-for="Username" class="text-danger"></span>

            </div>  
            
            <div>
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Type your password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @Html.ValidationSummary(true, "")
            <button id="Confirmar" type="submit" class="btn-primary">Enviar</button>
        </div>
    </form>
    <script src="~/js/Login.js"></script>
</div>
