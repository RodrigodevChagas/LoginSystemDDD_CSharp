@using SistemaDeLogin.AplicationIdentity.Dtos
@model CreateUsuarioDto;

@{
    ViewData["TItle"] = "Cadastre-se";
}

<div class="d-flex justify-content-center align-items-center">
    
    <form asp-controller="Cadastro" asp-action="CreateUser" method="post" id="Form" class="card w-100 shadow" style="max-width:600px">
        <div class="card-body d-flex flex-column gap-2" >
            <h1 class="text-center">CADASTRO</h1>
            <div >
                <label asp-for="Name" class="form-label"></label>
                <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="Type your name" />
            </div>
            <div >
                <label asp-for="Username" class="form-label"></label>
                <input type="text" asp-for="Username" class="form-control " id="Username" placeholder="Type your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div >
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input type="text" asp-for="PhoneNumber" class="form-control validateField" id="PhoneNumber" placeholder="(xx) xxxxx-xxxx" />
                <span asp-validation-for="PhoneNumber" class="text-danger validatePhoneNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input type="email" asp-for="Email" class="form-control validateField" placeholder="email@domain.com" />
                <span asp-validation-for="Email" class="text-danger validateEmail"></span>
            </div>
            <div >
                <label asp-for="Password" class="form-label"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Type your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div >
                <label asp-for ="Repassword" class="form-label"></label>
                <input type="password" asp-for="Repassword" class="form-control" id=" Repassword" placeholder="Retype your password"  />
                <span asp-validation-for="Repassword" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <button id="Confirmar" type="submit" class="btn btn-primary">Submit</button>
                <a role="button" class="btn btn-secondary" asp-controller="Login" asp-action="Index">Go back</a>
            </div> 
        </div>
   
    </form>

    <script src="~/js/Cadastro.js"></script>
</div>
